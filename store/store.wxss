.fqlist{
  display: flex;
  justify-content:space-between;
  width:700rpx;
  height: 450rpx;
  margin-top: 20rpx;
  padding-top:30rpx;
  
  box-sizing: border-box;
  flex-wrap: wrap;
  border: 3px solid rgb(172, 165, 185);
  border-radius: 30rpx;

}

.fq-item{
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  height: 150rpx;
  width: 150rpx;
  padding:10rpx;
  box-sizing: border-box;
 
  
  
}

.image-item{
  width: 100rpx;
  height: 100rpx;
  
}

.image{
  height: 100%;
  width: 100%;
}

.text-item{
  justify-content: center;
  align-items: center;
  text-align: center;
}

.text{
  font-size: 25rpx;
}

.activity{
  display: flex;
  justify-content: center;
}

.activity-list{
  width:700rpx;
  height: 350rpx;
  display: flex;
  padding: 10rpx;
  margin-top: 30rpx;
  margin-bottom: 20rpx;
  border: 2px solid pink;
  border-radius: 20rpx;
  box-sizing: border-box;
  justify-content: space-between;
}

.new-today{
  width: 320rpx;
  height: 100%;
  margin: 20rpx;
}

.new-text{
  font-size: 30rpx;
  text-align: center;
  margin-top: 5rpx;
}

.new-imageitem{
  align-items: center;
  justify-content: center;
  width: 290rpx;
  height: 250rpx;
  
}

.new-image{
  border-radius: 20rpx;
  width: 100%;
  height: 100%;
}