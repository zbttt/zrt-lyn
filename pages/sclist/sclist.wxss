/* pages/sclist/sclist.wxss */
.sc-list{
  width: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;

}

.sc-item{
  display: flex;
  width: 600rpx;
  padding: 20rpx;
  border-radius: 20rpx;
  border: 2px solid pink;
  box-sizing: border-box;
  margin: 20rpx;
}

.sc-image{
  width: 300rpx;
  height: 200rpx;
  border-radius: 20rpx;
}

.sc-text{
  font-size: 25rpx;
  margin-left: 15rpx;
  margin-top: 20rpx;
}