/* page/usersp/usersp.wxss */
.sc-list{
  width: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;

}

.sc-item{
  display: flex;
  width: 700rpx;
  padding: 20rpx;
  border-radius: 20rpx;
  border: 2px solid pink;
  box-sizing: border-box;
  margin: 7rpx;
}

.sc-image{
  width: 300rpx;
  height: 200rpx;
  margin-right: 30rpx;
  border-radius: 20rpx;
}

.sc-text{
  font-size: 25rpx;
  margin-left: 15rpx;
  margin-top: 20rpx;
}

.right{
  display: flex;
  flex-direction: column;
}

.scbt{
  font-size: 15dp;
  margin-top:20rpx;
}